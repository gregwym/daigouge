extends ../views/layout

block content
  h1 Edit Product - ##{product._id}: #{product.name}
  form(action="/products/#{product._id}", method="POST")
    input(type="hidden", name="_method", value="put")
    input(type="text", name="name", value="#{product.name}", placeholder="Name")
    input(type="url", name="url", value="#{product.url}", placeholder="URL")
    input(type="string", name="prices[0][value]", value="#{product.price('reg').value}", placeholder="Regular Price");
    input(type="hidden", name="prices[0][type]", value="reg");
    input(type="string", name="prices[1][value]", value="#{product.price('org').value}", placeholder="Original Price");
    input(type="hidden", name="prices[1][type]", value="org");
    input(type="hidden", name="prices[1][cur]", value="RMBÂ¥");
    input(type="submit")
  form(action="/products/#{product._id}", method="POST")
    input(type="hidden", name="_method", value="delete")
    input(type="submit", value="Delete")
